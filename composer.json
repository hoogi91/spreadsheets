{
  "name": "hoogi91/spreadsheets",
  "type": "typo3-cms-extension",
  "description": "Extension to add field definition and plugin to show and select information from spreadsheets",
  "readme": "README.md",
  "license": "GPL-3.0-or-later",
  "authors": [
    {
      "name": "Thorsten Hogenkamp",
      "email": "thorsten@hogenkamp-bocholt.de",
      "homepage": "https://www.hogenkamp-bocholt.de",
      "role": "Developer"
    },
    {
      "name": "UDG Rhein-Main GmbH",
      "homepage": "https://www.udg.de",
      "role": "Contributor"
    }
  ],
  "require": {
    "php": "~7.4.0 || ~8.0.0 || ~8.1.0",
    "ext-json": "*",
    "ext-mbstring": "*",
    "phpoffice/phpspreadsheet": "^1.18",
    "typo3/cms-backend": "^10.4 || ^11.5",
    "typo3/cms-core": "^10.4 || ^11.5",
    "typo3/cms-extbase": "^10.4 || ^11.5",
    "typo3/cms-fluid": "^10.4 || ^11.5",
    "typo3/cms-fluid-styled-content": "^10.4 || ^11.5",
    "typo3/cms-frontend": "^10.4 || ^11.5"
  },
  "require-dev": {
    "phpstan/phpstan": "^0.12.1",
    "phpunit/phpunit": "^9.5",
    "roave/security-advisories": "dev-latest",
    "squizlabs/php_codesniffer": "^3.5",
    "typo3/minimal": "^10.4 || ^11.5",
    "typo3/testing-framework": "^6.14",
    "vimeo/psalm": "^4.23"
  },
  "autoload": {
    "psr-4": {
      "Hoogi91\\Spreadsheets\\": "Classes"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Hoogi91\\Spreadsheets\\Tests\\": "Tests"
    }
  },
  "config": {
    "sort-packages": true,
    "vendor-dir": ".Build/vendor",
    "bin-dir": ".Build/bin"
  },
  "scripts": {
    "post-autoload-dump": [
      "TYPO3\\TestingFramework\\Composer\\ExtensionTestEnvironment::prepare"
    ],
    "extension-spreadsheet-fallback": [
      "mkdir -p Resources/Private/Composer",
      "if [ -f Resources/Private/Composer/composer.json ]; then cd Resources/Private/Composer/ && composer update; fi",
      "if [ ! -f Resources/Private/Composer/composer.json ]; then cd Resources/Private/Composer/ && composer require phpoffice/phpspreadsheet=^1.18 --ignore-platform-reqs && composer config classmap-authoritative true && composer config prepend-autoloader true && composer dump-autoload -o; fi"
    ],
    "prepare-release": [
      "@extension-spreadsheet-fallback",
      "rm -rf .github/ Tests/",
      "rm -f .gitattributes .gitignore .editorconfig composer.lock",
      "rm -f .babelrc .eslintignore .eslintrc.js package.json package-lock.json webpack.config.js"
    ]
  },
  "extra": {
    "typo3/cms": {
      "extension-key": "spreadsheets",
      "cms-package-dir": "{$vendor-dir}/typo3/cms",
      "web-dir": ".Build/web"
    }
  }
}
